# MongoDB
MONGODB_URI=your_mongodb_connection_string

# Authentication
JWT_SECRET=your_jwt_secret

# Frame.io Integration
FRAMEIO_TOKEN=your_frameio_token

# Cloudflare R2
R2_ENDPOINT=https://your-endpoint.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_PUBLIC_DOMAIN=optional_custom_domain_for_public_access

# LucidLink (optional)
LUCIDLINK_ENABLED=false
LUCIDLINK_BASE_PATH=/path/to/lucidlink/mount

# Wasabi Storage
WASABI_ACCESS_KEY_ID=your_wasabi_access_key_id
WASABI_SECRET_ACCESS_KEY=your_wasabi_secret_access_key
WASABI_BUCKET_NAME=your_wasabi_bucket_name
WASABI_REGION=your_wasabi_region
WASABI_ENDPOINT=your_wasabi_endpoint

# Webhook and Cron Security
WEBHOOK_SECRET=your_webhook_secret_for_worker_communication
CRON_SECRET=your_cron_secret_for_scheduled_tasks

# Email Notifications (optional)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDER_EMAIL=your_sender_email
ADMIN_EMAILS=comma,separated,admin,emails 